<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/check_drink_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="종류를 선택하세요"
        android:textSize="30dp"/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/check_edit_amount"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:hint="술마신 양"
        android:textSize="10dp" />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/check_amount_glass"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="잔"
        android:textSize="10dp"
        android:layout_below="@id/check_drink_name"/>

    <Button
        android:id="@+id/check_amount_bottle"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/check_drink_name"
        android:text="병"
        android:textSize="10dp"
        android:layout_toRightOf="@id/check_amount_glass"/>

    <Button
        android:id="@+id/check_amount_ml"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ml"
        android:textSize="10dp"
        android:layout_below="@id/check_drink_name"
        android:layout_toRightOf="@id/check_amount_bottle"/>



    </LinearLayout>>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아니오" />

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="네" />
    </LinearLayout>

</LinearLayout>


