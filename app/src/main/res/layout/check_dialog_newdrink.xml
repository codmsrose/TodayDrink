<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center">

    <EditText
        android:id="@+id/check_new_detail_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="술 이름- 예)소주"
        android:gravity="center"/>

    <EditText
        android:id="@+id/check_new_detail_degree"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="도수"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/check_new_detail_bottle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="한 병에 몇 ml?"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/check_new_detail_glass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="한 잔에 몇 ml?"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/check_new_detail_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text = "저장"
        android:backgroundTint="@color/blue1"/>

</LinearLayout>